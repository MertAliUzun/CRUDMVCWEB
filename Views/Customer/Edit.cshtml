@{
}
@model CRUDMVCWEB.Models.Entities.Customer
@if (Model is null)
{
    <p>Wrong ID</p>
}
else

{
    <form method="post">
        <h1>Edit</h1>
        <div style="display: none;" class="mt-3">
            <label class="form-label">ID </label>
            <input type="text" class="form-control" asp-for="CusId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name </label>
            <input type="text" class="form-control" asp-for="CusName" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email </label>
            <input type="email" class="form-control" asp-for="CusEmail" />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone </label>
            <input type="tel" class="form-control"  asp-for="CusPhone" />
        </div>
        <div class="mt-3">
            <label class="form-label">Message </label>
            <input type="text" class="form-control" asp-for="CusMessage" />
        </div>
        
        <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Agree" asp-for="CusAgree"/>
        <label class="form-check-label" for="CusAgree">Agree </label>
        </div>
        
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3"
            asp-controller="Customer" asp-action="Delete">Delete</button>
        </div>
    </form>
}

